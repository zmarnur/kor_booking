<%= simple_form_for @booking do |f| %>
<div class="container">
  <div class="row">
    <div class="col-3">
      Dodaj rezerwację
    </div>
    <div class="col">

    </div>
    <div class="col-1">
      <%= f.submit "Zapisz", class: "btn btn-primary"%>
    </div>    
    <div class="col-1">
      close
    </div>
  </div>  
<br>
<br>
  <div class="row">
    <div class="col-1">
      Od
    </div>
    <div class="col-5">
    <%= f.input :start_day, label: false %>
    </div>
    <div class="col-2">
      Status
    </div>    
    <div class="col">
    <%= f.select(:status, Booking::BOOKING_STATUS) %>

    </div>
  </div>

  <div class="row">
    <div class="col-1">
      Do
    </div>
    <div class="col-5">
    <%= f.input :end_day, label: false %>
    </div>
    <div class="col-2">
      Wartość
    </div>
    <div class="col-3">
    <%= f.input :price_total, label: false %>
    </div>
    <div class="col-1">
    PLN
    </div>
    
  </div>

  <div class="row">
    <div class="col-1">
      Ilość dni
    </div>
    <div class="col-5">
    <%= f.input :days_quantity, label: false %>
    </div>
    <div class="col-2">
      Pomieszczenie
    </div>
    <div class="col-3">
    <%= collection_select(:booking, :room_id, Room.all, :id, :room_name, {}, {:multiple => false}) %> <!--Select room_name from the Rooms table -->
    </div>
  </div>

  <div class="row">
    <div class="col-1">
      Dorośli
    </div>
    <div class="col-5">
    <%= f.input :adults, label: false, collection: 1..10  %>
    </div>
    <div class="col">
      3 of 3
    </div>
  </div>
  
  <div class="row">
    <div class="col-1">
      Dzieci
    </div>
    <div class="col-5">
    <%= f.input :kids, label: false, collection: 1..8    %>
    </div>
    <div class="col">
      3 of 3
    </div>
  </div>

<br>
 
 <!--Nested form -->

  <div>
    <p><strong>Klienci:</strong></p>
    <%= f.simple_fields_for :guest do |g| %>
    
   <div class="row">
    <div class="col-1">
      Imię
    </div>
    <div class="col-5">
      <%= g.input :first_name, label: false %>
    </div>
    <div class="col">
      3 of 3
    </div>
   </div>  
   
   <div class="row">
    <div class="col-1">
      Nazwisko
    </div>
    <div class="col-5">
      <%= g.input :last_name, label: false%>
    </div>
    <div class="col">
      3 of 3
    </div>
   </div>     

   <div class="row">
    <div class="col-1">
      email
    </div>
    <div class="col-5">
      <%= g.input :email, label: false %>
    </div>
    <div class="col">
      3 of 3
    </div>
   </div>     
   
   <div class="row">
    <div class="col-1">
      Telefon
    </div>
    <div class="col-5">
      <%= g.input :phone, label: false%>
    </div>
    <div class="col">
      3 of 3
    </div>
   </div>     
   
    <% end %>
  
<!--End Nested form -->

<% end %>
</div> 


